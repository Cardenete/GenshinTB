<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/pers1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tab_text_3"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/pers2"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/pers2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tab_text_3"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/pers3"
        app:layout_constraintStart_toEndOf="@+id/pers1" />

    <TextView
        android:id="@+id/pers3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tab_text_3"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/pers4"
        app:layout_constraintStart_toEndOf="@+id/pers2" />

    <TextView
        android:id="@+id/pers4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tab_text_3"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/pers3" />

    <TextView
        android:id="@+id/nombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/pers2Imagen"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/pers1Imagen"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintBottom_toTopOf="@+id/pers1"
        app:layout_constraintEnd_toEndOf="@+id/pers1"
        app:layout_constraintStart_toStartOf="@+id/pers1"
        tools:srcCompat="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/pers2Imagen"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintBottom_toTopOf="@+id/pers2"
        app:layout_constraintEnd_toEndOf="@+id/pers2"
        app:layout_constraintStart_toStartOf="@+id/pers2"
        tools:srcCompat="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/pers3Imagen"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintBottom_toTopOf="@+id/pers3"
        app:layout_constraintEnd_toEndOf="@+id/pers3"
        app:layout_constraintStart_toStartOf="@+id/pers3"
        tools:srcCompat="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/pers4Imagen"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintBottom_toTopOf="@+id/pers4"
        app:layout_constraintEnd_toEndOf="@+id/pers4"
        app:layout_constraintStart_toStartOf="@+id/pers4"
        tools:srcCompat="@tools:sample/avatars" />
</androidx.constraintlayout.widget.ConstraintLayout>